<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F4F6F7">

    <!-- Search Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/editTextSearchCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_margin="8dp"
            android:hint="Tìm kiếm danh mục..."
            android:background="@drawable/custom_edittext"
            android:padding="16dp" />

        <!-- Search Button -->
        <Button
            android:id="@+id/btnSearchCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Buttons for Adding Categories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Add Category Button -->
        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm danh mục"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Category List Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách danh mục sản phẩm"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="8dp" />

    <!-- ListView to display categories -->
    <ListView
        android:id="@+id/lvCategoryList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:background="@drawable/custom_listview_background" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/btnExitCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:background="@drawable/custom_button"
        app:backgroundTint="@null"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />
</LinearLayout>
