<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F8F8F8"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    >

    <ImageView
        android:id="@+id/imageViewitems1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/texttitlecart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:ellipsize="end"
        android:maxWidth="260dp"
        android:maxLines="2"
        android:text="Đây là chuỗi văn bản rất dài sẽ được cắt ngắn nếu vượt quá kích thước cho phép"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewitems1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="44dp"
        android:text="Hoàn Thành"
        android:textStyle="bold"
        android:textColor="#40F321"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="SL: x3"
        app:layout_constraintStart_toEndOf="@+id/imageViewitems1"
        app:layout_constraintTop_toBottomOf="@+id/texttitlecart" />

    <TextView
        android:id="@+id/texttotalbillh"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        android:text="199.000d"
        android:textColor="#FFFA0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texttitlecart" />
</androidx.constraintlayout.widget.ConstraintLayout>