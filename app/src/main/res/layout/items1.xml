<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"> <!-- Màu nền của mục -->

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"> <!-- Để TextView chiếm không gian còn lại -->
        <!-- Thêm khoảng cách giữa ảnh và text -->

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" /> <!-- Màu chữ cho tên sản phẩm -->

        <TextView
            android:id="@+id/tvProductPrice"
            android:text="gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark" /> <!-- Màu chữ cho giá -->

        <TextView
            android:id="@+id/tvProductQuantity"
            android:text="so luong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark" /> <!-- Màu chữ cho số lượng -->
    </LinearLayout>
</LinearLayout>
